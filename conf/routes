# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /categories                 controllers.Application.categories()
GET		/requestCategory			controllers.Application.requestCategory()
GET		/viewRequestedCategories	controllers.Application.viewRequestedCategories()
GET		/approveRequestedCategory	controllers.Application.approveRequestedCategory(cid: Long)
GET		/addCategory				controllers.Application.addCategory()
GET		/post/:pid	                controllers.Application.post(pid: Long)
GET     /category/:cid        		controllers.Application.category(cid: Long, p:Int ?= 0, s ?= "datePosted", o ?= "desc", f ?= "")
GET     /login        				controllers.Application.login()
GET     /logout        				controllers.Application.logout()
GET     /dashboard                  controllers.Application.dashboard()
GET     /userpriv                   controllers.Application.userPriv()
GET		/notifications				controllers.Application.notifications()
GET     /randomPost                 controllers.Application.random()
GET 	/submitPost/:cid			controllers.Application.submitPost(cid: Long)
GET	/viewRequestedCategories/:cid	controllers.Application.denyRequestedCategory(cid: Long)
GET     /editor/:chid               controllers.Application.editor(chid: Long, input: String ?="", output: String ?="", gradingResults: String ?="")
GET		/editCategories				controllers.Application.editCategories()
GET 	/editCategory/:cid			controllers.Application.editCategory(cid: Long)
GET		/editCategories/:cid		controllers.Application.deleteCategory(cid: Long)
GET 	/sortByCourseOrder			controllers.Application.sortByCourseOrder()
GET 	/manageCategories			controllers.Application.manageCategories()
GET	 /manageCategories/Alphabetically	controllers.Application.sortAlphabetically()
GET		/createCodeChallenge		controllers.Application.createCodeChallenge()
GET		/hideCategories				controllers.Application.hideOrShowCategories()
POST	/hideCategories				controllers.Application.updateHideCategories()
GET		/codeChallenge/:cid			controllers.Application.codeChallenge(cid: Long)
POST	/courseSettings				controllers.Application.createCourse()
GET		/courseSettings				controllers.Application.courseSettings()
GET 	/courseRoster				controllers.Application.courseRoster()
POST	/courseRoster				controllers.Application.uploadExcelRoster()
POST	/createCodeChallenge		controllers.Application.createCodeChallengePost()
POST	/manageCategories			controllers.Application.saveSortByCourseOrder()
POST	/editCategories/:cid		controllers.Application.updateCategory(cid: Long)
POST    /submitCode                 controllers.Application.submitCode(chid: Long)
POST	/createPost					controllers.Application.createPost(cid: Long)
POST    /postComment                controllers.Application.createComment(cid: Long, pid:Long)
GET		/makeUnSticky				controllers.Application.unStickyPost(cid: Long, pid: Long)
GET  	/makeSticky					controllers.Application.makePostSticky(cid: Long, pid: Long)
POST	/submitReqCategory			controllers.Application.requestCategorySubmit()
POST	/approveReqCategory			controllers.Application.approveRequestedCategorySubmit(cid: Long)
POST	/editCategories				controllers.Application.addCategorySubmit()
POST    /deletePost                 controllers.Application.deletePost(pid: Long, cid: Long)
PUT		/post/:pid					controllers.Application.vote(pid: Long)
POST	/courseSettings/roster		controllers.Application.changeCourse()
GET     /javascriptRoutes    		controllers.Application.javascriptRoutes

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

