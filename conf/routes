# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /categories                 controllers.Application.categories()
GET		/requestCategory			controllers.Application.requestCategory()
GET		/viewRequestedCategories	controllers.Application.viewRequestedCategories()
GET		/approveRequestedCategory	controllers.Application.approveRequestedCategory(cid: Long)
GET		/post/:pid	                controllers.Application.post(pid: Long)
GET     /category/:cid        		controllers.Application.category(cid: Long, p:Int ?= 0, s ?= "datePosted", o ?= "desc", f ?= "")
GET     /login        				controllers.Application.login()
GET     /logout        				controllers.Application.logout()
GET     /dashboard                  controllers.Application.dashboard()
GET     /userpriv                   controllers.Application.userPriv()
GET		/notifications				controllers.Application.notifications()
GET     /randomPost                 controllers.Application.random()
GET 	/submitPost/:cid			controllers.Application.submitPost(cid: Long)
GET	/viewRequestedCategories/:cid	controllers.Application.denyRequestedCategory(cid: Long)
GET     /editor                     controllers.Application.editor(output: String ?="")
POST    /submitCode                     controllers.Application.submitCode()
POST	/createPost				controllers.Application.createPost(cid: Long)
POST    /postComment                  controllers.Application.createComment(cid: Long, pid:Long)
GET    /makeUnSticky					controllers.Application.unStickyPost(cid: Long, pid: Long)
GET    /makeSticky					controllers.Application.makePostSticky(cid: Long, pid: Long)
POST	/submitReqCategory					controllers.Application.requestCategorySubmit()
POST	/approveReqCategory			controllers.Application.approveRequestedCategorySubmit(cid: Long)
POST    /deletePost                 controllers.Application.deletePost(pid: Long, cid: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

